<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_navigation"
    app:startDestination="@id/nav_home"
    >
    <fragment
        android:id="@+id/nav_home"
        android:name="com.eventplanner.fragments.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_registration"
            app:destination="@id/nav_registration" />
        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/nav_login" />
        <action
            android:id="@+id/action_home_to_services_overview"
            app:destination="@id/nav_service_overview" />
        <action
            android:id="@+id/action_home_to_price_list"
            app:destination="@id/nav_price_list" />
        <action
            android:id="@+id/action_home_to_solution_details"
            app:destination="@id/solution_details_fragment" />
        <action
            android:id="@+id/action_home_to_event_types"
            app:destination="@id/nav_event_types" />
        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/nav_profile" />
    </fragment>
    <fragment
        android:id="@+id/nav_top_events"
        android:name="com.eventplanner.fragments.events.TopEventsFragment"
        android:label="Top events"
        tools:layout="@layout/fragment_top_events"
        />
    <fragment
        android:id="@+id/nav_price_list"
        android:name="com.eventplanner.fragments.solutions.PriceListFragment"
        android:label="Price list"
        tools:layout="@layout/fragment_price_list"
        />
    <fragment
        android:id="@+id/nav_top_solutions"
        android:name="com.eventplanner.fragments.solutions.TopSolutionsFragment"
        android:label="Top solutions"
        tools:layout="@layout/fragment_top_solutions"
        >
        <action
            android:id="@+id/action_topSolutions_to_solutionDetails"
            app:destination="@id/solution_details_fragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_registration"
        android:name="com.eventplanner.fragments.auth.RegistrationFragment"
        android:label="Registration"
        tools:layout="@layout/fragment_registration"
        />
    <fragment
        android:id="@+id/nav_business_owner_registration"
        android:name="com.eventplanner.fragments.auth.BusinessOwnerRegistrationFragment"
        android:label="Business owner registration"
        tools:layout="@layout/fragment_business_owner_registration"
        />
    <fragment
        android:id="@+id/nav_event_organizer_registration"
        android:name="com.eventplanner.fragments.auth.EventOrganizerRegistrationFragment"
        android:label="Event organizer registration"
        tools:layout="@layout/fragment_event_organizer_registration"
        />
    <fragment
        android:id="@+id/nav_login"
        android:name="com.eventplanner.fragments.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login"
        />
    <fragment
        android:id="@+id/nav_service_creation"
        android:name="com.eventplanner.fragments.services.ServiceCreationFragment"
        android:label="Service creation"
        tools:layout="@layout/fragment_service_creation"
        />
    <fragment
        android:id="@+id/nav_service_overview"
        android:name="com.eventplanner.fragments.services.ServicesOverviewFragment"
        android:label="Service overview"
        tools:layout="@layout/fragment_services_overview">
        <action
            android:id="@+id/action_servicesOverview_to_createService"
            app:destination="@+id/nav_service_creation"/>
        <action
            android:id="@+id/action_services_overview_to_service_edit"
            app:destination="@+id/nav_service_edit"/>
    </fragment>
    <fragment
        android:id="@+id/nav_all_events"
        android:name="com.eventplanner.fragments.events.AllEventsFragment"
        android:label="All events"
        tools:layout="@layout/fragment_all_events"
        />
    <fragment
        android:id="@+id/nav_all_products"
        android:name="com.eventplanner.fragments.solutions.AllProductsFragment"
        android:label="All products"
        tools:layout="@layout/fragment_all_products">
        <action
            android:id="@+id/action_allProducts_to_solutionDetails"
            app:destination="@id/solution_details_fragment" />
        </fragment>
    <fragment
        android:id="@+id/nav_all_services"
        android:name="com.eventplanner.fragments.solutions.AllServicesFragment"
        android:label="All services"
        tools:layout="@layout/fragment_all_services"
        >
        <action
            android:id="@+id/action_allServices_to_solutionDetails"
            app:destination="@id/solution_details_fragment" />
    </fragment>

    <fragment
        android:id="@+id/solution_details_fragment"
        android:name="com.eventplanner.fragments.solutions.SolutionDetailsFragment"
        android:label="Solution Details">
        <argument
            android:name="solutionId"
            app:argType="string" />
        <action
            android:id="@+id/action_soltuionDetails_to_businessOwnerDetails"
            app:destination="@id/business_owner_details_fragment" />
    </fragment>

    <fragment
        android:id="@+id/business_owner_details_fragment"
        android:name="com.eventplanner.fragments.users.BusinessOwnerDetailsFragment"
        android:label="Business Owner Details">
        <argument
            android:name="businessOwnerId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_service_edit"
        android:name="com.eventplanner.fragments.services.ServiceEditFragment"
        android:label="Service Edit">
        <argument
            android:name="serviceId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.eventplanner.fragments.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profile_to_change_password"
            app:destination="@id/nav_change_password" />
    </fragment>

    <fragment
        android:id="@+id/nav_change_password"
        android:name="com.eventplanner.fragments.profile.ChangePasswordFragment"
        android:label="Change Password"
        tools:layout="@layout/fragment_change_password" />

    <fragment
        android:id="@+id/nav_event_types"
        android:name="com.eventplanner.fragments.eventTypes.EventTypesFragment"
        android:label="Event types"
        tools:layout="@layout/fragment_event_types">
        <action
            android:id="@+id/action_eventTypes_to_eventTypeForm"
            app:destination="@id/nav_event_type_form" />
    </fragment>

    <fragment
        android:id="@+id/nav_event_type_form"
        android:name="com.eventplanner.fragments.eventTypes.EventTypeFragment"
        android:label="Event Type Form"
        tools:layout="@layout/fragment_event_type">

        <!-- Optional argument: eventTypeId for editing -->
        <argument
            android:name="eventTypeId"
            app:argType=""
            android:defaultValue="@null" />
    </fragment>
</navigation>
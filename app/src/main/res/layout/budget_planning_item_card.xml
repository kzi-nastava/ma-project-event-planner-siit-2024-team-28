<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/rounded_purple_card"
    android:layout_marginEnd="20dp">

    <TextView
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:text="Category name"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/editText_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:inputType="text" />

        <Button
                android:id="@+id/button_edit_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/cool_purple"
                android:layout_marginStart="8dp"
                android:layout_weight="2"
                android:background="@drawable/button_rounded"
                android:text="@string/edit"
                android:textColor="@android:color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/button_delete_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/red_button"
        android:text="@string/delete"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/delete_red" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_solutions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="20dp"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragments.solutions.SolutionDetailsFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_card"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/solutionDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="4dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Solution Title"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#888888"
            android:textSize="22sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="16dp"
            android:textSize="18sp" />

            <!--TODO: srediti slike -->
            <ImageView
                android:id="@+id/imageSolution"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:layout_marginBottom="15dp"
                android:contentDescription="Solution image"
                android:scaleType="centerCrop"
                android:src="@drawable/ketering" />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_input"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_discount"
            android:textColor="#FF0000"
            android:layout_marginBottom="16dp"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/availability"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:text="@string/description"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textEventTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:text="@string/event_types"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textSpecifics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:text="@string/specifics"
            android:textSize="18sp"/>

            <TextView
                android:id="@+id/textDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000000"
                android:text="@string/duration"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textMinDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000000"
                android:text="@string/min_duration"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textMaxDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000000"
                android:text="@string/max_duration"
                android:textSize="18sp"/>

        <TextView
            android:id="@+id/textReservationDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:text="@string/reservation_deadline"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textCancellationDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:text="@string/cancellation_deadline"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textReservationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:text="@string/reservation_type"
            android:textSize="18sp"/>

            <LinearLayout
                android:id="@+id/buttonsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:gravity="center_horizontal">

                <!-- buttons first row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:backgroundTint="@null"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/visit_owner"
                        android:background="@drawable/button_rounded"
                        android:textColor="@android:color/white" />

                    <Button
                        android:backgroundTint="@null"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/add_to_favorites"
                        android:background="@drawable/button_rounded"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- buttons second row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:backgroundTint="@null"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/buy"
                        android:textColor="@android:color/white"
                        android:background="@drawable/submit_button" />

                    <Button
                        android:backgroundTint="@null"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/leave_review"
                        android:background="@drawable/button_rounded"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
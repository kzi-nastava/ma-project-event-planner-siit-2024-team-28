<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.solutions.SolutionDetailsFragment">
    <!-- TODO: stringove a vrv i boje staviti u resurse-->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/solutionDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="4dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <!-- Left side (Text info) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solution Title"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accepted Solutions"
                    android:textColor="#888888"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/textAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author Name"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginBottom="16dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: 123$"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-28.29$"
                    android:textColor="#FF0000"
                    android:layout_marginBottom="16dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textAvailability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Availability: Available"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description: ..." />

                <TextView
                    android:id="@+id/textEventTypes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event types: ..." />

                <TextView
                    android:id="@+id/textSpecifics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specifics: ..." />

                <TextView
                    android:id="@+id/textReservationDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservation deadline: ..." />

                <TextView
                    android:id="@+id/textCancellationDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancellation deadline: ..." />

            </LinearLayout>

            <!-- Right side (Image) -->
            <ImageView
                android:id="@+id/imageSolution"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:contentDescription="Solution image"
                android:scaleType="centerCrop"
                android:src="@drawable/ketering" /> <!-- TODO: srediti prikaz slike-->
        </LinearLayout>
    </ScrollView>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".fragments.solutions.SolutionDetailsFragment">

    <!-- TODO: stringove a vrv i boje staviti u resurse-->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/solutionDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_card"
            android:padding="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="4dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Solution Title"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#888888"
            android:textSize="22sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="16dp"
            android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageSolution"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:layout_marginBottom="15dp"
                android:contentDescription="Solution image"
                android:scaleType="centerCrop"
                android:src="@drawable/ketering" />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price with discount"
            android:textColor="#FF0000"
            android:layout_marginBottom="16dp"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Availability"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:text="Description"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textEventTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:text="Event types"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textSpecifics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:text="Specifics"
            android:textSize="18sp"/>

            <TextView
                android:id="@+id/textDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000000"
                android:text="Duration"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textMinDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000000"
                android:text="Min Duration"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textMaxDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000000"
                android:text="Max Duration"
                android:textSize="18sp"/>

        <TextView
            android:id="@+id/textReservationDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:text="Reservation deadline"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textCancellationDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:text="Cancellation deadline"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textReservationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:text="Reservation type"
            android:textSize="18sp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".fragments.services.ServicesOverviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search services"
            android:background="@drawable/rounded_search_view"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:inputType="text" />

        <LinearLayout
            android:id="@+id/linear_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_add_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                app:backgroundTint="@color/cool_purple"
                android:background="@drawable/button_rounded"
                android:textColor="@color/white"
                android:text="@string/add_new_service" />

            <Button
                android:id="@+id/button_filter_services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="5dp"
                app:backgroundTint="@color/cool_purple"
                android:background="@drawable/button_rounded"
                android:textColor="@color/white"
                android:text="@string/filter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pagination_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <Button
                android:id="@+id/button_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous page"
                android:background="@drawable/button_background_selector"
                android:textColor="@color/white"
                android:enabled="false"
                android:layout_marginEnd="8dp"/>

            <Spinner
                android:id="@+id/spinner_page_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next page"
                android:background="@drawable/button_background_selector"
                android:textColor="@color/white"
                android:enabled="false"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <ListView
            android:id="@+id/serviceListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            tools:listitem="@layout/service_card" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
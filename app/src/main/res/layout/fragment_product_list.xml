<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- Header Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/text_header_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Products"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/button_create_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Create Product"
                    app:backgroundTint="@color/cool_purple"
                    android:background="@drawable/button_rounded" />

            </LinearLayout>

            <!-- Search Bar -->
            <EditText
                android:id="@+id/editText_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:hint="Search by name..."
                android:inputType="text"
                android:layout_marginBottom="16dp"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp" />

            <!-- Filter Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filters"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <!-- Category Filter -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinner_filter_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edit_text_background" />

            <!-- Event Type Filter -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Type"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinner_filter_event_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edit_text_background" />

            <!-- Description Filter -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/editText_filter_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:hint="Filter by description..."
                android:inputType="text"
                android:layout_marginBottom="12dp" />

            <!-- Price Range Filters -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min Price"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/editText_min_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:hint="0.00"
                        android:inputType="numberDecimal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max Price"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/editText_max_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:hint="999.99"
                        android:inputType="numberDecimal" />

                </LinearLayout>

            </LinearLayout>

            <!-- Availability Filter -->
            <CheckBox
                android:id="@+id/checkbox_filter_available_only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show available products only"
                android:buttonTint="@color/cool_purple"
                android:layout_marginBottom="8dp" />

            <!-- Clear Filters Button -->
            <Button
                android:id="@+id/button_clear_filters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear Filters"
                android:layout_gravity="end"
                app:backgroundTint="@android:color/darker_gray"
                android:background="@drawable/button_rounded" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Products RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_products"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        tools:listitem="@layout/item_product" />

    <!-- Pagination -->
    <LinearLayout
        android:id="@+id/pagination_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone">

        <Button
            android:id="@+id/button_previous_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@color/cool_purple"
            android:background="@drawable/button_rounded" />

        <LinearLayout
            android:id="@+id/container_page_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/button_next_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginStart="8dp"
            app:backgroundTint="@color/cool_purple"
            android:background="@drawable/button_rounded" />

    </LinearLayout>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No products found"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/button_create_first_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Your First Product"
            app:backgroundTint="@color/cool_purple"
            android:background="@drawable/button_rounded" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Service Images ViewPager -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/image_view_pager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edit_text_background" />

        <!-- Service Info -->
        <TextView
            android:id="@+id/service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"
            tools:text="Service Name" />

        <TextView
            android:id="@+id/service_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            tools:text="Service description goes here..." />

        <!-- Category and Event Types -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/service_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/cool_purple"
                android:background="@drawable/status_badge_visible"
                android:padding="4dp"
                android:layout_marginEnd="8dp"
                tools:text="Category: Electronics" />

            <TextView
                android:id="@+id/product_event_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                tools:text="Wedding, Corporate" />

        </LinearLayout>

        <!-- Price and Discount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/service_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/cool_purple"
                tools:text="$99.99" />

            <TextView
                android:id="@+id/service_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/discount_badge"
                android:padding="4dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:visibility="gone"
                tools:text="20% OFF"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Status Badges -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/badge_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/status_badge_visible"
                android:padding="6dp"
                android:text="Visible"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/badge_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/status_badge_available"
                android:padding="6dp"
                android:text="Available"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/badge_unavailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/status_badge_unavailable"
                android:padding="6dp"
                android:text="Unavailable"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/badge_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/status_badge_pending"
                android:padding="6dp"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:visibility="gone"
                tools:text="PENDING" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Edit"
                app:backgroundTint="@color/cool_purple"
                android:background="@drawable/button_rounded" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Delete"
                app:backgroundTint="@android:color/holo_red_dark"
                android:background="@drawable/button_rounded" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>